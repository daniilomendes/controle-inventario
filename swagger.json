{
  "openapi": "3.0.0",
  "info": {
    "title": "API Controle de Estoque",
    "description": "Está API tem como objetivo facilitar o controle de estoque da sua empresa.",
    "termOfService": "http://localhost:3333/terms",
    "contact": {
      "email": "danilo.mirandha@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/v1/user": {
      "post": {
        "description": "Criar um  usuário.",
        "requestBody": {
          "description": "Dados necessários para a criação de um novo usuário.",
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "aplication/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/session": {
      "post": {
        "description": "Logar e autenticar usuário",
        "requestBody": {
          "description": "Dados necessários para login e autenticação do usuário",
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestAuthUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "aplication/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseAuthUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/me?user_id={user_id}": {
      "get": {
        "description": "Busca de um usuário pelo seu id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID do usuário",
            "required": "true",
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "aplication/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateUser"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestCreateUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "ResponseCreateUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "RequestAuthUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "ResponseAuthUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {}
  }
}
